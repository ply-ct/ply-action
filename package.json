{
  "name": "ply-action",
  "version": "2.5.0",
  "description": "Ply GitHub Action",
  "main": "index.js",
  "keywords": [
    "ply",
    "rest",
    "graphql",
    "autotest",
    "action"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ply-ct/ply-action.git"
  },
  "scripts": {
    "lint": "eslint src",
    "ver": "PKG_VER=$(jq -r .version ./package.json) && echo export const plyActionVersion = \\'$PKG_VER\\'\\; > src/version.ts",
    "build": "npm run ver && tsc && npm run cleanup && ncc build -o dist src/action.ts",
    "cleanup": "mkdir -p temp && cp dist/.gitignore temp && rm -rf dist && mkdir dist && mv temp/.gitignore dist",
    "test": "mocha --require ts-node/register test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vercel/ncc": "^0.36.0",
    "chai": "^4.3.7",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@ply-ct/ply": "^3.0.56",
    "glob": "^7.2.3",
    "node-fetch": "^2.6.7"
  }
}
